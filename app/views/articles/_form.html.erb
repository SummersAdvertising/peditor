<script src="http://code.jquery.com/ui/1.9.1/jquery-ui.js"></script>
<script src="/js/editor.js"></script>
<script src="/js/editor_p.js"></script>
<script src="/js/editor_img.js"></script>
<script src="/js/editor_video.js"></script>
<script src="/js/editor_list.js"></script>
<style>
.ui-state-highlight { height: 50px; }
.paragraphContainer { border-width: 1px; border-style: solid; margin: 5px;}
.editorList { padding-left: 0px;}
.editorList li{ display: inline-block; padding-left: 5px;}
.editorContent .editorChild{ display: none;}
.editorContent .active{ display: block;}
</style>

<%= form_for(@article) do |f| %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>

<div id="editorPanel"></div>

<hr />

<!--show the content of article -->
<%= f.label :content %><%= f.text_field :content, :style => "width: 80%; " %><!--display:none;-->
<div id="articleContent"></div>

<div class="actions">
  <%= f.submit "save article" %>
</div>

<% end %>

<script type="text/javascript">
$(document).ready(function(){
  editor.init();
});
</script>