<h1>Editing article</h1>

<%= form_for(@article) do |f| %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>
<%= f.label :content %><%= f.text_field :content, :style => "width: 80%; " %><!--display:none;-->

<div class="actions">
  <%= f.submit "save article" %>
</div>

<% end %>

<div id="editorPanel"></div>

<hr />

<!--show the content of article -->
<section id="articleContent"></section>



<script type="text/javascript">
$(document).ready(function(){
	editor.init();
});
</script>

