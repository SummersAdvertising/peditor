<h1>Editing article</h1>

<%= form_for(@article) do |f| %>

<div class="field">
  <%= f.label :name, "title" %>：<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.hidden_field :content, :style => "width: 80%; " %><!--display:none;-->
</div>
<% end %>

<div id="editorPanel"></div>

<hr />

<!--show the content of article -->
<section id="articleContent"></section>

<hr />

<div class="action" id="submit">
  <a href="#">儲存</a>
</div>

<script type="text/javascript">
$(document).ready(function(){
	editor.init();

	$("#submit").click(function(e){
		e.preventDefault();

		if(!editor.isPostNotSent()){
			$("#edit_article_<%= @article.id %>").submit();
		}
		else{
			editor.alert("段落編輯尚未完成。", "error");
		}
		
	});
});
</script>

